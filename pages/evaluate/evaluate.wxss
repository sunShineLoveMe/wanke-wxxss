/* pages/evaluate/evaluate.wxss */
.banner {
    width: 100%;
    height: 408rpx;
    overflow: hidden;
}

.banner image {
    width: 100%;
}

.goods-detail {
    padding: 0 20rpx;
}

.goods-detail .goods-name {
    font-size: 14px;
    font-weight: bold;
    color: #666;
    padding: 10rpx 0;
}

.goods-detail .goods-info {
    display: flex; 
    justify-content: space-between;
    color: #666;
    padding: 10rpx 0;
    font-size: 12px;
}

.goods-detail .goods-info .goods-grade {
    color: #E94E18;
    letter-spacing: 1px;
}

.goods-detail .goods-info .goods-grade .label{
    color: #000;
    display: inline-block;
}

.evaluatePannel {
    padding: 0 20rpx;
    border-top: 10rpx solid #F8F8F8;
    color: #666;
    font-size: 14px;
}

.starList {
    display: flex;
    align-items: center;
    padding: 20rpx 0;
}

.starList .starName {
    margin-right: 20rpx;
}

.star.active {
    background-size: 100% 100%;
}

.star {
    display: inline-block;
    width: 28rpx;
    height: 28rpx;
    
    background-size: 100% 100%;
}

.evaluateText {
    position: relative;
    padding: 10rpx;
    background: #f8f8f8;
    border-radius: 10px;
}

textarea {
    resize: none;
    width: 100%;
    background: #f8f8f8;
    border: navajowhite;
    height: 160rpx;
}

.text_tip {
    position: absolute;
    bottom: -40rpx;
    right: 0;
    color: #999;
}

.upload {
    margin-top: 60rpx;
    display: flex;
}
.uploadBtn {
    position: relative;
    width: 160rpx;
    height: 160rpx;
    border-radius: 10px;
    margin-right: 20rpx;
}

.uploadIcon {
    width: 100%;
    height: 100%;
    opacity: 0;
}

.img_tip {
    font-size: 12px;
    position: absolute;
    bottom: 0;
    width: 200rpx;
    right: -210rpx;
    color: #999;
}

.footer {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    text-align: center;
    height: 80rpx;
    line-height: 80rpx;
    background: #E94E18;
    color: #fff;
    font-size: 14px;
    border-radius: 2px;
    letter-spacing: 2px;
}

.del {
    display: inline-block;
    width: 30rpx;
    height: 30rpx;
    background: #E94E18;
    border-radius: 50%;
    position: absolute;
    right: -15rpx;
    top: -15rpx;
    color: #fff;
    text-align: center;
    font-size: 60rpx;
    line-height: 20rpx;
    overflow: hidden;
}

.default-icon-image {
    width: 100%;
    height: 100%;
}