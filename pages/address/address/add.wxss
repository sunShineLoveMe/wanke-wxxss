/* pages/address/address/add.wxss */
page {
    background-color: #f8f8f8;
}

.header {
    overflow: hidden;
    padding: 20rpx;
    font-size: 12px;
}

.title {
    float: left;
}

.saveBtn {
     float: right;
}

.addressinfo {
    background: #fff;
    padding: 20rpx;
    font-size: 12px;
    color: #666;
}

.common {
    margin: 20rpx 0;
    height: 60rpx;
    line-height: 60rpx;
}
.commonTitle {
    display: inline-block;
    width: 120rpx;
    vertical-align: middle;
}

.commonText {
    display: inline-block;
    height: 100%;
    vertical-align: middle;
}

input {
    order: 0;
    height: 100%;
    box-shadow: none;
}

.city {
    float: right;
}

.cityIcon {
    display: inline-block;
    width: 10rpx;
    height: 15rpx;
    margin-left: 20rpx;
    vertical-align:top;
}

.cityIcon image {
    width: 100%;
    height: 100%;
}
.chooseCity {
    display: inline-block;
    vertical-align:middle;
}

textarea {
    width: 100%;
    height: 150rpx;
    border: 0;
    box-shadow: none;
    resize: none;
}

.default {
    padding: 20rpx;
    background: #fff;
    margin-top: 20rpx;
    font-size: 12px;
    color: #666;
}

.defaultIcon {
    float: right;
    width: 30rpx;
    height: 30rpx;
    vertical-align: middle;
}

.defaultLabel {
    display: inline-block;
    vertical-align: middle;
}


.picker {
    display: inline-block;
    vertical-align: middle;
}

.default-icon-image {
    width: 100%;
    height: 100%;
}